<UserControl x:Class="UI.Mantenimientos.UserControlFactura"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Mantenimientos"
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="700">
    <Grid  Background="#FFFAF9" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0,0,-583,-36" Width="1283">
        <Rectangle HorizontalAlignment="Left" Height="194" Margin="11,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="1244"/>
        <Label x:Name="labelId" Content="Cliente ID:" HorizontalAlignment="Left" Margin="78,34,0,0" VerticalAlignment="Top" Foreground="#4C2882" FontWeight="Bold" FontFamily="Tahoma" RenderTransformOrigin="1.901,0.775"/>
        <TextBox IsEnabled="False" x:Name="TextID" TabIndex="0" materialDesign:HintAssist.Hint="codigo" Height="30" Margin="161,28,1000,578" Text="{Binding SelectedItem.ClienteID, ElementName=comboBoxCliente, Mode=OneWay}" />
        <Label x:Name="labelCliente" Content="Cliente:" HorizontalAlignment="Left" Margin="97,76,0,0" VerticalAlignment="Top" Foreground="#4C2882" FontWeight="Bold" FontFamily="Tahoma" RenderTransformOrigin="0.457,0.95"/>
        <ComboBox x:Name="comboBoxCliente" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="161,65,0,0" SelectedValue="{Binding SelectedItem.ClienteID, ElementName=dataGrid1, Mode=OneWay}" SelectionChanged="ComboBoxCliente_SelectionChanged" >
        </ComboBox>
        <Label x:Name="labelEmpleado" Content="Empleado:" HorizontalAlignment="Left" Margin="80,113,0,0" VerticalAlignment="Top" Foreground="#4C2882" FontWeight="Bold" FontFamily="Tahoma" RenderTransformOrigin="0.561,0.092"/>
        <ComboBox x:Name="comboBoxEmpleado" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="161,108,0,0" SelectedValue="{Binding SelectedItem.EmpleadoID, ElementName=dataGrid1, Mode=OneWay}" SelectionChanged="ComboBoxEmpleado_SelectionChanged" >
        </ComboBox>
        <Label x:Name="labelFecha" Content="Fecha:" HorizontalAlignment="Left" Margin="446,41,0,0" VerticalAlignment="Top" Foreground="#4C2882" FontWeight="Bold" FontFamily="Tahoma"/>
        <DatePicker HorizontalAlignment="Left" x:Name="dateFecha" Margin="510,40,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.519,0.952"/>
        <!--<Rectangle Fill="#c3ece9" HorizontalAlignment="Left" Height="55" Margin="17,187,0,0" Stroke="Black" VerticalAlignment="Top" Width="755"/>-->
        <Button x:Name="buttonConfirmar" Background="#E0B0FF" Content="Confirmar" HorizontalAlignment="Left" Margin="652,148,0,0" VerticalAlignment="Top" Width="150" RenderTransformOrigin="-0.053,0" Height="35" Foreground="#FFFFFF" FontWeight="Bold" BorderBrush="#ffff00" Click="ButtonConfirmar_Click"/>
        <Button x:Name="buttonAgregar" Background="#8806CE" Content="Agregar" HorizontalAlignment="Left" Margin="913,148,0,0" VerticalAlignment="Top" Width="88" RenderTransformOrigin="-0.003,0" Height="35" Foreground="#000000" BorderBrush="#000000" Click="ButtonAgregar_Click"/>
        <DataGrid x:Name="dataGrid1"  IsReadOnly="True" ItemsSource="{Binding estadocontratoCollection}" Background="#fff5ee" HorizontalAlignment="Left" Height="347" Margin="11,242,0,0" VerticalAlignment="Top" Width="669" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
        <DataGrid x:Name="dataGrid2"  IsReadOnly="True" ItemsSource="{Binding estadocontratoCollection}" Background="#fff5ee" HorizontalAlignment="Left" Height="347" Margin="715,242,0,0" VerticalAlignment="Top" Width="239" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" RenderTransformOrigin="0.5,0.5">
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.172"/>
                    <TranslateTransform/>
                </TransformGroup>
            </DataGrid.RenderTransform>
        </DataGrid>
        <Label x:Name="labelEstado" Content="Estado:" HorizontalAlignment="Left" Margin="441,85,0,0" VerticalAlignment="Top" Foreground="#4C2882" FontWeight="Bold" FontFamily="Tahoma"/>
        <Label x:Name="labelProductoID" Content="Producto ID:" HorizontalAlignment="Left" Margin="715,42,0,0" VerticalAlignment="Top" Foreground="#4C2882" FontWeight="Bold" FontFamily="Tahoma" RenderTransformOrigin="1.901,0.775"/>
        <TextBox IsEnabled="False" x:Name="TextProductoID" TabIndex="2" materialDesign:HintAssist.Hint="codigo" Height="30" Margin="818,36,342,570" Text="{Binding SelectedItem.ProductoID, ElementName=comboBoxProducto, Mode=OneWay}" />
        <Label x:Name="labelProducto" Content="Producto:" HorizontalAlignment="Left" Margin="733,83,0,0" VerticalAlignment="Top" Foreground="#4C2882" FontWeight="Bold" FontFamily="Tahoma" RenderTransformOrigin="0.457,0.95"/>
        <ComboBox x:Name="comboBoxProducto" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="821,77,0,0" SelectedValue="{Binding SelectedItem.ProductoID, ElementName=dataGrid2, Mode=OneWay}" SelectionChanged="ComboBoxProducto_SelectionChanged" />
        <Label x:Name="labelPrecio" Content="Precio:" HorizontalAlignment="Left" Margin="979,48,0,0" VerticalAlignment="Top" Foreground="#4C2882" FontWeight="Bold" FontFamily="Tahoma" RenderTransformOrigin="0.457,0.95"/>
        <TextBox IsEnabled="True" x:Name="TextPrecio" TabIndex="3" materialDesign:HintAssist.Hint="precio" Height="30" Margin="1065,42,94,564" Text="{Binding SelectedItem.Precio, ElementName=comboBoxProducto, Mode=OneWay}"/>
        <Label x:Name="labelCantidad" Content="Cantidad:" HorizontalAlignment="Left" Margin="979,85,0,0" VerticalAlignment="Top" Foreground="#4C2882" FontWeight="Bold" FontFamily="Tahoma" RenderTransformOrigin="0.457,0.95"/>
        <TextBox IsEnabled="True" x:Name="TextCantidad" TabIndex="4" materialDesign:HintAssist.Hint="cantidad" Height="30" Margin="1065,79,93,527" Text="{Binding SelectedItem.cantidad, ElementName=dataGrid2, Mode=OneWay}" />
        <Button x:Name="buttonAgregarFactura" Background="#8806CE" Content="Agregar" HorizontalAlignment="Left" Margin="299,148,0,0" VerticalAlignment="Top" Width="88" RenderTransformOrigin="-0.003,0" Height="35" Foreground="#000000" BorderBrush="#000000" Click="ButtonAgregarFactura_Click"/>
        <Label x:Name="Contrato" Content="Contrato" HorizontalAlignment="Left" Margin="259,218,0,0" VerticalAlignment="Top" Foreground="#0E5022" FontWeight="Bold" FontFamily="Tahoma" RenderTransformOrigin="0.561,0.092"/>
        <Label x:Name="Detalle" Content="Detalle" HorizontalAlignment="Left" Margin="802,218,0,0" VerticalAlignment="Top" Foreground="#0E5022" FontWeight="Bold" FontFamily="Tahoma" RenderTransformOrigin="0.561,0.092"/>
        <TextBox HorizontalAlignment="Left" x:Name="Texto" Height="347" Margin="979,242,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="255"/>
        <Label x:Name="XML" Content="XML" HorizontalAlignment="Left" Margin="1088,214,0,0" VerticalAlignment="Top" Foreground="#0E5022" FontWeight="Bold" FontFamily="Tahoma" RenderTransformOrigin="0.561,0.092"/>
        <Label x:Name="labelTotal" Content="Total:" HorizontalAlignment="Left" Margin="451,119,0,0" VerticalAlignment="Top" Foreground="#4C2882" FontWeight="Bold" FontFamily="Tahoma" RenderTransformOrigin="0.808,0.625"/>
        <Label x:Name="labelTotales" Content="_______________________________" HorizontalAlignment="Left" Margin="510,119,0,0" VerticalAlignment="Top" Foreground="#4C2882" FontWeight="Bold" FontFamily="Tahoma" RenderTransformOrigin="0.808,0.625"/>
        <TextBox IsEnabled="True" x:Name="TextEstado" TabIndex="1" materialDesign:HintAssist.Hint="estado" Height="30" Margin="510,75,647,531" Text="{Binding SelectedItem.Estado, ElementName=dataGrid1, Mode=OneWay}"/>
    </Grid>
</UserControl>